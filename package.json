{
  "name": "@crz/web-component-storybook-starterkit",
  "version": "0.0.1",
  "author": "Daniel Jorge <dani2013@gmail.com>",
  "private": true,
  "license": "MIT",
  "repository": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "prepublish:release": "lerna run build",
    "publish:release": "lerna publish",
    "prestart": "yarn gen:docs && yarn gen:docs-json && jest --json --outputFile=.gen/jest-test-results.json || true",
    "start": "start-storybook -p 9009 -s public",
    "prestorybook:build": "jest --json --outputFile=.jest-test-results.json || true",
    "storybook:build": "build-storybook -s public",
    "prestorybook:deploy": "yarn storybook:build",
    "storybook:deploy": "build-storybook -s public && gh-pages -d storybook-static",
    "gen:docs": "wca analyze packages/** --format markdown --outDir .gen",
    "gen:docs-json": "wca analyze packages/** --outFile .gen/custom-elements.json ",
    "test": "jest",
    "diff": "lerna diff",
    "new-version": "lerna version --conventional-commits --yes"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged && jest",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/*/src/**/*.{js,json,scss,md}": [
      "prettier --write"
    ],
    "packages/*/src/**/*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "printWidth": 120
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true,
      "browser": true,
      "jest": true
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "info",
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./.jest/setup.ts"
    ],
    "preset": "ts-jest/presets/js-with-ts",
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.test.json"
      }
    },
    "testEnvironment": "jest-environment-jsdom-sixteen",
    "transformIgnorePatterns": [
      "node_modules/(?!(lit-html|lit-element)/)"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@commitlint/config-lerna-scopes": "8.3.4",
    "@storybook/addon-a11y": "5.3.14",
    "@storybook/addon-actions": "5.3.14",
    "@storybook/addon-centered": "5.3.14",
    "@storybook/addon-docs": "5.3.14",
    "@storybook/addon-jest": "5.3.14",
    "@storybook/addon-knobs": "5.3.14",
    "@storybook/addon-links": "5.3.14",
    "@storybook/addon-notes": "5.3.14",
    "@storybook/addon-storysource": "5.3.14",
    "@storybook/addon-viewport": "5.3.14",
    "@storybook/addons": "5.3.14",
    "@storybook/preset-typescript": "2.1.0",
    "@storybook/theming": "5.3.14",
    "@storybook/web-components": "5.3.14",
    "@testing-library/jest-dom": "5.3.0",
    "@types/jest": "25.1.4",
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "@typescript-eslint/parser": "2.23.0",
    "awesome-typescript-loader": "5.2.1",
    "babel-loader": "8.0.6",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "fork-ts-checker-webpack-plugin": "4.1.0",
    "gh-pages": "2.2.0",
    "husky": "4.2.3",
    "jest": "25.2.1",
    "jest-environment-jsdom-sixteen": "1.0.3",
    "lerna": "3.20.2",
    "lint-staged": "10.0.8",
    "lit-element": "2.2.1",
    "lit-html": "1.1.2",
    "plop": "2.6.0",
    "prettier": "1.19.1",
    "raw-loader": "4.0.0",
    "rollup": "2.0.6",
    "rollup-plugin-peer-deps-external": "2.2.2",
    "rollup-plugin-postcss": "2.4.1",
    "rollup-plugin-typescript2": "0.26.0",
    "rollup-plugin-url": "3.0.1",
    "ts-jest": "25.2.1",
    "ts-loader": "6.2.1",
    "typescript": "3.8.3",
    "web-component-analyzer": "1.0.3"
  }
}